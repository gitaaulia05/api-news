            "post" : {
                "description": "Register new user",
                "requestBody":{
                    "content": {
                        "application/json":{
                            "examples": {
                                "gita":{
                                    "description": "Register User Gita",
                                    "value":{
                                        "nama":"Gita Aulia",
                                        "email":"gita@gmail.com",
                                        "password":"password"
